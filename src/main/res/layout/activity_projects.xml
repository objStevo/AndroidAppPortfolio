<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientmain"
    tools:context=".projects">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="369dp"
        android:layout_height="585dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.619"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/webButton"
                android:layout_width="143dp"
                android:layout_height="135dp"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="52dp"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:padding="5dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/webdev" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="Link to my corresponding web app portfolio. Created using html, css, javascript, react. "
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/androidButton"
                android:layout_width="143dp"
                android:layout_height="135dp"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="52dp"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:padding="5dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/androiddevlogo" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="Link to the source code for my portfolio (this) android app."
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/matButton1"

                android:layout_width="143dp"
                android:layout_height="135dp"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="52dp"
                android:adjustViewBounds="false"
                android:cropToPadding="false"
                android:padding="5dp"
                android:scaleType="fitCenter"

                app:srcCompat="@drawable/matlablogo" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="Implementation of cubic root finder function using Newton's method, along with a second implementation of Newton's method for solving complex cubic polynomials using matlab."
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/matButton2"

                android:layout_width="143dp"
                android:layout_height="135dp"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="52dp"
                android:adjustViewBounds="false"
                android:cropToPadding="false"
                android:padding="5dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/matlablogo" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="Implementation of the Euler method, along with my implementation of the classical RK4 (Runge Kutta) method in matlab."
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/matButton3"
                android:layout_width="143dp"
                android:layout_height="135dp"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="52dp"
                android:adjustViewBounds="false"
                android:cropToPadding="false"
                android:padding="5dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/matlablogo" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="This function tries to obtain an approximation to the solution of Ax=b (Matrix function representing system of linear equations) by means of the Gauss-Seidel algorithm."
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/matButton4"
                android:layout_width="143dp"
                android:layout_height="135dp"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="52dp"
                android:adjustViewBounds="false"
                android:cropToPadding="false"
                android:padding="5dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/matlablogo" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="The function generates eigenvalues of an nxn matrix."
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/matButton5"
                android:layout_width="143dp"
                android:layout_height="135dp"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="52dp"
                android:adjustViewBounds="false"
                android:cropToPadding="false"
                android:padding="5dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/matlablogo" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="A wide variety of miscellaneous algorithms implemented in Matlab attached with a readme file."
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/ctciButton"
                android:layout_width="143dp"
                android:layout_height="135dp"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="52dp"
                android:adjustViewBounds="false"
                android:cropToPadding="false"
                android:padding="5dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ctci" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="My solutions to the popular interview prep book: Cracking the Coding Interview."
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="228dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="88dp"
        android:layout_marginRight="88dp"
        android:fontFamily="@font/bungee_inline"
        android:text="Projects"
        android:textAllCaps="true"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>